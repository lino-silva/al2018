<section class="container">
    <div class="row reviews">
        <h1 class="col-12 text-center">Diz-se por a√≠:</h1>
        {{#each reviews}}
        <blockquote class="blockquote col-sm-6 col-md-4">
            <p class="mb-0">"{{{phrase}}}"</p>
            <footer class="blockquote-footer">{{author}} ({{role}})</footer>
        </blockquote>
        {{/each}}
