<!-- Header -->
<header class="container-fluid text-center">
    <div class="row">
        <h1 class="col-12 display-1">{{header.title}}</h1>
        <h4 class="col-12">{{header.subtitle}}</h3>
        <h3 class="col-12">{{header.names}}</h3>
    </div>
    <a role="button" class="btn btn-info" href="confirmar">Confirmar presen√ßa</a>
</header>

<section class="container">
    <div class="row reviews">
        {{#each reviews}}
        <blockquote class="blockquote col-sm-6 col-md-4">
            <p class="mb-0">"{{{phrase}}}"</p>
            <footer class="blockquote-footer">{{author}} ({{role}})</footer>
        </blockquote>
        {{/each}}
    </div>
</section>
